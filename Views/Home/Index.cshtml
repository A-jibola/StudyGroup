@{
    ViewData["Title"] = "Home Page";
}

<div class="p-1">
    <div class="">
        <div class="row bg-info">
            <div class="col-md-8">
                <div id="campaign" class="carousel slide carousel-fade" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#campaign" data-slide-to="0" class="active"></li>
                        <li data-target="#campaign" data-slide-to="1"></li>
                        <li data-target="#campaign" data-slide-to="2"></li>
                        <li data-target="#campaign" data-slide-to="3"></li>
                        <li data-target="#campaign" data-slide-to="4"></li>
                        <li data-target="#campaign" data-slide-to="5"></li>
                        <li data-target="#campaign" data-slide-to="6"></li>

                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active  bg-info">
                            @*<img src="..." class="d-block w-100" alt="...">*@

                            <img src="~/images/one.jpg" class=" d-block h-100 w-100"/>
                            <div class="carousel-caption d-none d-md-block">
                                FIRST ROW
                            </div>
                        </div>
                        <div class="carousel-item bg-warning">
                            <img src="~/images/two.jpg" class="h-100 d-block w-100" />
                        </div>
                        <div class="carousel-item h-100 w-100 bg-secondary">
                            <img src="~/images/three.jpg" class="h-100 d-block w-100" />
                        </div>
                        <div class="carousel-item h-100 w-100 bg-secondary">
                            <img src="~/images/four.jpg" class="h-100 d-block w-100" />
                        </div>
                        <div class="carousel-item h-100 w-100 bg-secondary">

                            <img src="~/images/five.jpg" class="h-100 d-block w-100"/>
                        </div>
                        <div class="carousel-item h-100 w-100 bg-secondary">
                            <img src="~/images/six.jpg" class="h-100 d-block w-100"/>
                        </div>
                        <div class="carousel-item h-100 w-100 bg-secondary">
                            <img src="~/images/seven.jpg" class="h-100 d-block w-100" />
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="ml-3 mt-5 col-md-3">
                    <form>
                        <h4>Log In</h4>
                        <hr />
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" />
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                Remember Me?
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password">Forgot your password?</a>
                            </p>
                            <p>
                                <a href="#">Register as a new user</a>
                            </p>
                        </div>
                    </form>
            </div>
        </div>
        
    </div>
</div>
